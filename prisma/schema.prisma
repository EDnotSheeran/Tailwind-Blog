// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id         Int       @id @default(autoincrement())
  title      String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime?
  deletedAt  DateTime?
  content    String?
  published  Boolean   @default(false)
  views      Int       @default(0)
  User       User      @relation(fields: [authorId], references: [id])
  authorId   Int
  Tag        Tag?      @relation(fields: [tagId], references: [tagName])
  tagId      String?
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
}

model Tag {
  tagName String @id // Must be unique
  posts   Post[]
}

model Category {
  id             Int        @id @default(autoincrement())
  parentCategory Category?  @relation("CategoryToCategory", fields: [categoryId], references: [id])
  Category       Category[] @relation("CategoryToCategory")
  categoryId     Int?
  Post           Post[]
}

model Profile {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  bio       String?
  userId    Int      @unique
  User      User     @relation(fields: [userId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String?
  email     String   @unique
  Post      Post[]
  Profile   Profile?
}
